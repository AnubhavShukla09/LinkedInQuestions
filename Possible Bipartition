class Solution {
public:

    // DFS to color graph and check conflict
    bool dfs(int node, int c, vector<vector<int>>& adj, vector<int>& color) {
        color[node] = c; // assign current color (group)

        // visit all neighbors
        for(int nei : adj[node]) {

            // if neighbor not colored → color with opposite group
            if(color[nei] == 0) {
                if(!dfs(nei, -c, adj, color)) return false;
            }

            // if neighbor has same color → conflict
            else if(color[nei] == c) {
                return false;
            }
        }
        return true; // no conflict
    }

    bool possibleBipartition(int n, vector<vector<int>>& dislikes) {

        vector<vector<int>> adj(n + 1); // adjacency list

        // build graph from dislikes
        for(auto &d : dislikes) {
            adj[d[0]].push_back(d[1]);
            adj[d[1]].push_back(d[0]);
        }

        vector<int> color(n + 1, 0); // 0=uncolored, 1/-1=two groups

        // check all components (graph may be disconnected)
        for(int i = 1; i <= n; i++) {

            // if not yet colored → start DFS
            if(color[i] == 0) {
                if(!dfs(i, 1, adj, color)) return false;
            }
        }

        return true; // bipartition possible
    }
};
