/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */

class Solution {
public:
    TreeNode* lowestCommonAncestor(TreeNode* root, TreeNode* p, TreeNode* q) {
        if(!root)return NULL;
        int rootVal = root->val, pVal = p->val, qVal = q->val,lesser,greater;
        if(pVal<qVal) {
            lesser = pVal;
            greater = qVal;
        } else {
            lesser = qVal;
            greater = pVal;
        }
        if(rootVal>lesser and rootVal>greater) {
            return lowestCommonAncestor(root->left,p,q);
        } else if (rootVal<lesser and rootVal<greater) {
            return lowestCommonAncestor(root->right,p,q);
        }
        return root;
    }
};
